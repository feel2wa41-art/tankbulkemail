# Tank Worker Environment Configuration
# Copy this file to .env.local for local development

NODE_ENV=development

# Backend API Connection
BACKEND_API_URL=http://localhost:3001/api/v1

# Oracle Database (Worker also needs direct DB access)
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE=XEPDB1
ORACLE_USER=TANK_DEV
ORACLE_PASSWORD=dev123
ORACLE_POOL_MIN=2
ORACLE_POOL_MAX=10

# Redis (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Scheduler
SCHEDULER_ENABLED=false
SCHEDULER_INTERVAL=30000

# Manual Trigger API
MANUAL_TRIGGER_PORT=3002

# Email Sending Mode
DEV_MODE=true
MOCK_EMAIL_PATH=./mock-emails

# AWS SES
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SES_FROM_EMAIL=noreply@yourdomain.com

# File Storage
FILE_ROOT_PATH=C:/tank-dev/test-data/files

# Concurrency
MAX_PARALLEL_JOBS=5
BATCH_SIZE=100
SES_RATE_LIMIT=14

# Logging
LOG_LEVEL=debug
LOG_PATH=./logs
